{% form_theme orderForm 'layout/form/errors.html.twig' %}

<div class="modal-header">
    <h4 class="modal-title">Новый заказ</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
</div>

{{ form_start(orderForm) }}
    {{ form_widget(orderForm._token) }}
    {{ form_errors(orderForm) }}
<!--Body-->
<div class="modal-body ui-front">{# без класса ui-front список autocomplite'a будет показан не рядом с полем поиска #}
    {{ include('order/_form.html.twig', {'comment_placeholder': 'Можно написать позже'}) }}
</div>
<!--Footer-->
<div class="modal-footer">
    <button class="btn btn-sm btn-narrow btn-dark-green" type="submit" formnovalidate>{{ button_label|default('Сохранить') }}</button>
</div>
{{ form_end(orderForm, {'render_rest': false}) }}
