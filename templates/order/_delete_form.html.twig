<form class="d-inline" method="post" action="{{ path('user_order_delete', {'id': order.id}) }}" onsubmit="return confirm('Действительно удалить?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
    <button class="btn btn-sm btn-narrow btn-danger"><i class="fas fa-trash"></i> {{ button_label|default('') }}</button>
</form>
