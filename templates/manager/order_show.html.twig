{% extends 'layout/base.html.twig' %}

{% block title %}Заказ участника СП{{ parent() }}{% endblock %}

{% block body %}

    {# @var $order Order #}
    <div class="row">
        <div class="col-12">
            <h1 class="align-self-center mb-0">Заказ {{ order.idWithPrefix }}</h1>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-12 col-md-4">
            {{ include('layout/bit/_order_status.html.twig') }}
            {{ include('layout/bit/_order_rate.html.twig') }}
            <a href="{{ order.shop }}" class="ml-1" target="_blank">{{ order.shop }} <i class="fa fa-xs fa-external-link-alt"></i></a>
            <br>
            <strong>Комментарий клиента:</strong> {% if order.userComment %}{{ order.userComment }}{% else %}–{% endif %}
        </div>
        <div class="col-12 col-md-4">

        </div>
        <div class="col-12 col-md-4 text-right">
            <button type="button" data-id="{{ order.id }}" class="btn btn-sm btn-primary order-manager-edit">
                <i class="fa fa-edit"></i> <span class="d-none d-sm-inline pl-1">Редактировать</span>
            </button>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-12">
            <h2 class="align-self-center">Товары</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-sm table-hover table-responsive-sm">
                <thead>
                <tr>
                    <th style="width: 1%">#</th>
                    <th style="width: 20%">Название</th>
                    <th style="width: 1%"><nobr>Кол-во</nobr></th>
                    <th style="width: 1%"><nobr>Цена $</nobr></th>
                    <th style="width: 1%"><nobr>Сумма $</nobr></th>
                    <th style="width: 1%"><nobr>Сумма р.</nobr></th>
                    <th style="width: 1%">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for product in order.products %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>
                            <a href="{{ product.url }}" target="_blank">{{ product.name }} <i class="fa fa-xs fa-external-link-alt"></i></a>
                            {% if product.article %}{{ product.article }}{% endif %}
                            {% if product.comment %}<br>{{ product.comment }}{% endif %}
                        </td>
                        <td>{{ product.amount }}</td>
                        <td>{{ product.userPrice }}</td>
                        <td>{{ product.sum }}</td>
                        <td>{% if order.rate %}{{ product.sumRub }}{%- else -%}{%- endif -%}</td>
                        <td>
                            <nobr>
                                <button type="button" class="btn btn-sm btn-primary mr-2 product-manager-edit" data-id="{{ product.id }}">
                                    <i class="fa fa-edit"></i>
                                </button>
                                {{ include('product/_delete_form.html.twig') }}
                            </nobr>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Вы еще не добавили ни одного товара.</td>
                    </tr>
                {% endfor %}
                {% if order.products.count %}
                    <tr>
                        <th></th>
                        <th>Итого товары</th>
                        <th>{{ order.productsAmount }}</th>
                        <th></th>
                        <th>{{ order.productsSum }}</th>
                        <th>{% if order.rate %}{{ order.productsSumRub }}{%- else -%}–{%- endif -%}</th>
                        {% if is_granted('ORDER_MANAGE', order) %}<th></th>{% endif %}
                    </tr>
                    {% if order.deliveryToStock %}
                        <tr>
                            <td></td>
                            <td colspan="3">Доставка по США</td>
                            <td>{{ order.deliveryToStock }}</td>
                            <td>{{ (order.rate and order.deliveryToStockRub) ? order.deliveryToStockRub : '–' }}</td>
                            {% if is_granted('ORDER_MANAGE', order) %}<td></td>{% endif %}
                        </tr>
                    {% endif %}
                    {% if order.deliveryToRussia %}
                        <tr>
                            <td></td>
                            <td colspan="3">Доставка в Россию</td>
                            <td>{{ order.deliveryToRussia }}</td>
                            <td>{{ (order.rate and order.deliveryToRussiaRub) ? order.deliveryToRussiaRub : '–' }}</td>
                            {% if is_granted('ORDER_MANAGE', order) %}<td></td>{% endif %}
                        </tr>
                    {% endif %}
                    {% if order.deliveryToClient %}
                        <tr>
                            <td></td>
                            <td colspan="4">Доставка по России</td>
                            <td>{{ order.deliveryToClient }}</td>
                            {% if is_granted('ORDER_MANAGE', order) %}<td></td>{% endif %}
                        </tr>
                    {% endif %}
                    {% if order.additionalCost %}
                        <tr>
                            <td></td>
                            <td colspan="2">
                                Дополнительные затраты <i class="far fa-comment" data-toggle="tooltip" title="{{ order.additionalCostComment }}"></i>
                            </td>
                            <td>{{ order.additionalCost }}</td>
                            <td colspan="2"></td>
                            {% if is_granted('ORDER_MANAGE', order) %}<td></td>{% endif %}
                        </tr>
                    {% endif %}
                    <tr>
                        <th></th>
                        <th colspan="4">Итого товары + доставка</th>
                        <th>{{ order.rate and order.totalRub ? order.totalRub : '–'}}</th>
                        {% if is_granted('ORDER_MANAGE', order) %}<th></th>{% endif %}
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
