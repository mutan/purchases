    </div>

    <div class="form-group col-md-12 col-lg-6">
        {{ form_label(productForm.purchaseShop, 'Реальный магазин выкупа') }}
        {{ form_widget(productForm.purchaseShop, {'attr': {'class': 'form-control-sm'}}) }}
