{% form_theme basketForm 'layout/form/_errors.html.twig' %}

<div class="modal-header">
    <h4 class="modal-title">Редактировать заказ {{ basket.idWithPrefix }}</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
</div>

{{ form_start(basketForm, {'attr': {'id': 'basket-shop-form'}}) }}
    {{ form_widget(basketForm._token) }}
    {{ form_errors(basketForm) }}
<!--Body-->
<div class="modal-body ui-front">{# без класса ui-front список autocomplite'a будет показан не рядом с полем поиска #}
    {{ include('manager/_basket_form.html.twig') }}
</div>
<!--Footer-->
<div class="modal-footer">
    <button class="btn btn-sm btn-narrow btn-dark-green" type="submit" formnovalidate>{{ button_label|default('Обновить') }}</button>
</div>
{{ form_end(basketForm, {'render_rest': false}) }}
