{% extends 'layout/base.html.twig' %}

{% form_theme form 'layout/form/errors.html.twig' %}

{% block title %}Восстановление пароля – {{ app_site_name_for_email }}{% endblock %}

{% block body %}
    <div class="row justify-content-center mb-5">
        <div class="card-wrapper auth">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Изменить пароль</h4>

                    {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_label(form.plainPassword.first, 'Пароль') }}
                            {{ form_widget(form.plainPassword.first, {attr : {'data-eye': true}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.plainPassword.second, 'Пароль еще раз') }}
                            {{ form_widget(form.plainPassword.second, {attr : {'data-eye': true}}) }}
                        </div>

                        <div class="form-group mt-2">
                            <div class="form-text text-muted" style="font-size: 0.8rem">
                                Убедитесь, что ваш пароль достаточно надежный и легко запоминающийся.
                            </div>
                        </div>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-primary btn-block" formnovalidate>Сохранить</button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
