{% extends 'layout/base.html.twig' %}

{% form_theme form 'layout/form/_errors.html.twig' %}

{% block title %}Забыли пароль – {{ app_site_name_for_email }}{% endblock %}

{% block body %}
    <div class="row justify-content-center mb-5">
        <div class="card-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ 'Сбросить пароль' }}</h4>

                    {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_label(form.email, 'Емейл') }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required': true, 'autofocus': true}}) }}
                        </div>

                        <div class="g-recaptcha" data-sitekey="{{ app_recaptcha_key }}"></div>

                        <div class="form-group mt-2">
                            <div class="form-text text-muted" style="font-size: 0.8rem">
                                {{ 'После нажатия на кнопку ниже мы отправим вам ссылку для сброса пароля' }}
                            </div>
                        </div>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-primary btn-block" formnovalidate>
                                {{ 'Отправить' }}
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src={{ app_recaptcha_url }}></script>
{% endblock %}
