{% extends 'layout/base.html.twig' %}

{% block title %}Войти – {{ app_site_name_for_email }}{% endblock %}

{% block body %}
    <div class="row justify-content-center mb-5">
        <div class="card-wrapper auth">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Войти</h4>

                    <form method="POST">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {% if error %}
                            {# Перевод messageKey в файле translations/messages.ru.yml #}
                            <div class="invalid-feedback d-block mb-2">{{ error.messageKey|trans }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="email">Емейл</label>
                            <input id="email" type="email" class="form-control" name="email" value="{{ last_username }}" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="password">Пароль</label>
                            <a href="{{ path('app_forgot_password') }}" class="float-right" style="font-size: 0.8rem">
                                Забыли пароль?
                            </a>
                            <input id="password" type="password" class="form-control" name="password" required data-eye>
                        </div>

                        <div class="form-group">
                            <div class="custom-checkbox custom-control">
                                <input type="checkbox" name="_remember_me" id="remember" class="custom-control-input">
                                <label for="remember" class="custom-control-label">Запомнить меня</label>
                            </div>
                        </div>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-primary btn-block" formnovalidate>Войти</button>
                        </div>

                        <div class="text-center mt-3">
                            Еще нет аккаунта?
                            <a href="{{ path('app_register') }}">Создать</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
