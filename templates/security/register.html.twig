{% extends 'layout/base.html.twig' %}

{% form_theme form 'layout/form/_errors.html.twig' 'layout/form/_checkbox_widget_for_registration.html.twig' %}

{% block title %}Регистрация – {{ app_site_name_for_email }}{% endblock %}

{% block body %}
<div class="row justify-content-center mb-5">
    <div class="card-wrapper">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Регистрация</h4>

                {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.email, 'Емейл') }}
                        {{ form_widget(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.lastname, 'Фамилия') }}
                        {{ form_widget(form.lastname) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.firstname, 'Имя') }}
                        {{ form_widget(form.firstname) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.middlename, 'Отчество') }}
                        {{ form_widget(form.middlename) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.first, 'Пароль') }}
                        {{ form_widget(form.plainPassword.first, {attr : {'data-eye': true}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.second, 'Пароль еще раз') }}
                        {{ form_widget(form.plainPassword.second, {attr : {'data-eye': true}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.termsAccepted ) }}
                    </div>

                    <div class="g-recaptcha" data-sitekey="{{ app_recaptcha_key }}"></div><br>

                    <div class="form-group m-0">
                        <button type="submit" class="btn btn-primary btn-block" formnovalidate>Создать аккаунт</button>
                    </div>

                    <div class="text-center mt-3">
                        {{ 'Уже есть аккаунт?' }}
                        <a href="{{ path('app_login') }}">Войти</a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src={{ app_recaptcha_url }}></script>
{% endblock %}
