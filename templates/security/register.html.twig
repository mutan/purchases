{% extends 'layout/base.html.twig' %}

{% form_theme form 'form/errors.html.twig' 'form/checkbox_widget_for_registration.html.twig' %}

{% block title %}Register â€“ {{ '~site_name'|trans }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="card-wrapper auth">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ '~auth.register'|trans }}</h4>

                    {{ form_start(form) }}
                        {{ form_errors(form) }}

                        {{ form_label(form.name, '~auth.name'|trans) }}
                        {{ form_widget(form.name) }}

                        {{ form_label(form.email, '~auth.email'|trans) }}
                        {{ form_widget(form.email) }}

                        {{ form_label(form.plainPassword.first, '~auth.password'|trans) }}
                        {{ form_widget(form.plainPassword.first, {attr : {'data-eye': true}}) }}

                        {{ form_label(form.plainPassword.second, '~auth.repeat_password'|trans) }}
                        {{ form_widget(form.plainPassword.second, {attr : {'data-eye': true}}) }}

                        {{ form_widget(form.termsAccepted ) }}

                        <div class="g-recaptcha" data-sitekey="{{ app_recaptcha_key }}"></div><br>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-primary btn-block" formnovalidate>
                                {{ '~auth.register'|trans }}
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            {{ '~auth.already_have_account'|trans }}
                            <a href="{{ path('app_login') }}">{{ '~auth.login'|trans }}</a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src={{ app_recaptcha_url }}></script>
{% endblock %}
