{% extends 'layout/base.html.twig' %}

{% form_theme basketForm 'form/errors.html.twig' %}
{% form_theme productForm 'form/errors.html.twig' %}

{% block title %}Адреса{{ parent() }}{% endblock %}

{% block body %}

    {# @var $basket Basket #}
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <h1 class="align-self-center mb-0">Заказ {{ basket.idWithPrefix }}</h1>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 text-right">
            <a class="btn btn-sm btn-mdb-color" href="{{ path('basket_index') }}">
                <i class="fa fa-arrow-left pr-1"></i> Вернуться к списку
            </a>
            <button type="button" class="btn btn-sm btn-dark-green" data-toggle="modal" data-target="#modalBasketEdit">
                <i class="fa fa-edit pr-1"></i> Редактировать
            </button>
            {{ include('basket/_delete_form.html.twig') }}
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-12">
            <span class="badge badge-dark mr-1">{{ basket.status }}</span>
            <a href="{{ basket.shop }}" target="_blank">{{ basket.shop }} <i class="fa fa-external-link-alt"></i></a><br>
            {% if basket.userComment %}<i class="far fa-comment pr-1"></i> {{ basket.userComment }}{% endif %}
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <h2 class="align-self-center">Товары</h2>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 text-right">
            <button type="button" class="btn btn-sm btn-dark-green" data-toggle="modal" data-target="#modalProductNew">
                <i class="fa fa-plus pr-1"></i> Добавить товар
            </button>
        </div>
    </div>

    <table class="table table-sm table-bordered table-responsive-sm">
        <thead>
        <tr>
            <td style="width: 1%">#</td>
            <td style="width: 20%">Название</td>
            <td style="width: 1%"><nobr>Кол-во</nobr></td>
            <td style="width: 1%">Цена</td>
            <td style="width: 20%">Комментарий</td>
            <td style="width: 1%">Действия</td>
        </tr>
        </thead>
        <tbody>
        {% for product in basket.products %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>
                    <a href="{{ product.url }}" target="_blank">{{ product.name }} <i class="fa fa-external-link-alt"></i></a>
                    {% if product.article %}{{ product.article }}{% endif %}
                </td>
                <td>{{ product.amount }}</td>
                <td>{{ product.userPrice }}</td>
                <td>{{ product.comment }}</td>
                <td>
                    <nobr>
                    <a class="btn btn-sm btn-narrow btn-mdb-color darken-3" href="{{ path('product_edit', {'id': product.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('product/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Записей не найдено.</td>
            </tr>
        {% endfor %}
        {% if basket.deliveryToStock %}
            <tr>
                <td></td>
                <td colspan="2">Доставка по США</td>
                <td>{{ basket.deliveryToStock }}</td>
                <td colspan="3"></td>
            </tr>
        {% endif %}
        {% if basket.deliveryToRussia %}
            <tr>
                <td></td>
                <td colspan="2">Доставка в Россию</td>
                <td>{{ basket.deliveryToRussia }}</td>
                <td colspan="3"></td>
            </tr>
        {% endif %}
        {% if basket.deliveryToClient %}
            <tr>
                <td></td>
                <td colspan="2">Доставка по России</td>
                <td>{{ basket.deliveryToClient }}</td>
                <td colspan="3"></td>
            </tr>
        {% endif %}
        {% if basket.additionalCost %}
            <tr>
                <td></td>
                <td colspan="2">
                    Дополнительные затраты <i class="far fa-comment" data-toggle="tooltip" title="{{ basket.additionalCostComment }}"></i>
                </td>
                <td>{{ basket.additionalCost }}</td>
                <td colspan="3"></td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <!-- Modal: modalBasketEdit -->
    <div class="modal fade" id="modalBasketEdit" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <h4 class="modal-title" id="modalBasketEdit">Редактировать заказ {{ basket.idWithPrefix }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!--Body-->
                <div class="modal-body ui-front">{# без класса ui-front список autocomplite'a будет показан не рядом с полем поиска #}
                    {{ include('basket/_form.html.twig') }}
                </div>
                <!--Footer-->
                <div class="modal-footer">
                    <button class="btn btn-dark-green" type="submit" formnovalidate>
                        {{ button_label|default('Обновить') }}
                    </button>
                </div>
                {{ form_end(basketForm, {'render_rest': false}) }}
            </div>
        </div>
    </div>
    <!-- Modal: modalBasketEdit -->

    <!-- Modal: modalProductNew -->
    <div class="modal fade" id="modalProductNew" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Новый товар</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>
                <!--Body-->
                <div class="modal-body ui-front">{# без класса ui-front список autocomplite'a будет показан не рядом с полем поиска #}
                    {{ include('product/_form.html.twig') }}
                </div>
                <!--Footer-->
                <div class="modal-footer">
                    <button class="btn btn-dark-green" type="submit" formnovalidate>
                        <i class="fa fa-plus-square"></i> {{ button_label|default('Сохранить') }}
                    </button>
                </div>
                {{ form_end(productForm, {'render_rest': false}) }}
            </div>
        </div>
    </div>
    <!-- Modal: modalProductNew -->

{% endblock %}

{% block javascripts %}
    {% if modalBasketEditShow %}<script>$(() => { $('#modalBasketEdit').modal('show'); });</script> {% endif %}
    {% if modalProductNewShow %}<script>$(() => { $('#modalProductNew').modal('show'); });</script> {% endif %}
{% endblock %}
