{% extends 'layout/base.html.twig' %}

{% block title %}Адреса{{ parent() }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <h1 class="align-self-center">Заказ {{ basket.idWithPrefix }} {{ basket.shop }}</h1>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 text-right">
            <a class="btn btn-sm btn-mdb-color" href="{{ path('user_address_index') }}">
                <i class="fa fa-arrow-left pr-1"></i> Вернуться к списку
            </a>
            <button type="button" class="btn btn-sm btn-dark-green" data-toggle="modal" data-target="#modalBasketEdit">
                <i class="fa fa-edit pr-1"></i> Редактировать
            </button>
            <button class="btn btn-sm btn-dark-green" type="submit" formnovalidate>
                <i class="fa fa-plus-square pr-1"></i> Добавить товар
            </button>
        </div>
    </div>
    <hr>

    <h2>Товары</h2>

    <section class="mt-3 pb-3">
        <div class="row">
            <div class="col-12">
                <div class="card border-mdb mb-4">
                    <div class="card-body">

                        <div class="row d-flex">
                            <div class="col-sm-12 col-md-9 d-flex">
                                <h4 class="align-self-center mb-0">Заказ {{ basket.idWithPrefix }} {{ basket.shop }}</h4>
                                <div class="align-self-center ml-3">

                                    Статус: {{ basket.status }}
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-3 text-right d-flex">
                                {#<a class="btn btn-sm btn-narrow btn-mdb-color darken-3 ml-auto" href="{{ path('basket_edit', {'id': basket.id}) }}"><i class="fas fa-edit"></i></a>#}
                                {{ include('basket/_delete_form.html.twig') }}
                            </div>
                        </div>
                        <hr>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <table class="table table-sm table-responsive-sm">
        <thead>
        <tr>
            <td></td>
            <td>Название</td>
            <td>Артикль</td>
            <td>Кол-во</td>
            <td>Цена</td>
            <td>Комментарий</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for product in basket.products %}
            <tr>
                <td>{{ product.name }} <a href="{{ product.url }}" target="_blank"><i class="fa fa-external-link-alt"></i></a></td>
                <td>{{ product.article }}</td>
                <td>{{ product.amount }}</td>
                <td>{{ product.userPrice }}</td>
                <td><a href="#" data-toggle="tooltip" title="{{ product.comment }}"><i class="fa fa-comment"></i></a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Modal: modalProductNew -->
    <div class="modal fade" id="modalProductNew" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <h4 class="modal-title" id="modalProductNew">Добавить товар</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!--Body-->
                <div class="modal-body">
                    {{ include('basket/_form.html.twig') }}
                </div>
                <!--Footer-->
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-dark-green" type="submit" formnovalidate>
                        <i class="fa fa-plus-square pr-1"></i> {{ button_label|default('Сохранить') }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <!-- Modal: modalProductNew -->

    <!-- Modal: modalBasketEdit -->
    <div class="modal fade" id="modalBasketEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <h4 class="modal-title" id="modalBasketEdit">Редактировать заказ {{ basket.idWithPrefix }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!--Body-->
                <div class="modal-body">
                    {{ include('basket/_form.html.twig') }}
                </div>
                <!--Footer-->
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-dark-green" type="submit" formnovalidate>
                        <i class="fa fa-plus-square pr-1"></i> {{ button_label|default('Сохранить') }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <!-- Modal: modalBasketEdit -->

{% endblock %}
