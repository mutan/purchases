{% extends 'layout/base.html.twig' %}

{% block title %}Адреса{{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12 col-md-9">
            <h1 class="align-self-center">Заказы</h1>
        </div>
        <div class="col-sm-12 col-md-3 text-right">
            <a class="btn btn-block btn-dark-green" href="{{ path('basket_new') }}" style="min-width: 145px">
                <i class="fa fa-plus-square pr-1"></i> Создать
            </a>
        </div>
    </div>
    <hr>

    <section class="mt-3 pb-3">
        <div class="row">
            {% for basket in baskets %}
                <div class="col-12">
                    <div class="card border-mdb mb-4">
                        <div class="card-body">
                            <h4>Заказ #{{ basket.idWithPrefix }}</h4>

                            <div class="text-muted d-flex">
                                <div class="align-self-center font-small">
                                    111<br>
                                    222
                                </div>

                                <a class="btn btn-sm btn-narrow btn-mdb-color darken-3 ml-auto" href="{{ path('basket_edit', {'id': basket.id}) }}"><i class="fas fa-edit"></i></a>
                                {{ include('basket/_delete_form.html.twig') }}

                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p>Записей не найдено.</p>
                </div>
            {% endfor %}
        </div>
    </section>




    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Weight</th>
                <th>DeliveryShopStore</th>
                <th>DeliveryRus</th>
                <th>BoughtDate</th>
                <th>CreateDate</th>
                <th>UpdateDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td>{{ basket.id }}</td>
                <td>{{ basket.status }}</td>
                <td>{{ basket.weight }}</td>
                <td>{{ basket.deliveryShopStore }}</td>
                <td>{{ basket.deliveryRus }}</td>
                <td>{{ basket.boughtDate ? basket.boughtDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ basket.createDate ? basket.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ basket.updateDate ? basket.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('basket_show', {'id': basket.id}) }}">show</a>
                    <a href="{{ path('basket_edit', {'id': basket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
