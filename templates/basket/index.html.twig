{% extends 'layout/base.html.twig' %}

{% form_theme form 'form/errors.html.twig' %}

{% block title %}Адреса{{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12 col-md-9">
            <h1 class="align-self-center">Заказы</h1>
        </div>
        <div class="col-sm-12 col-md-3 text-right">
            <button type="button" class="btn btn-sm btn-dark-green" data-toggle="modal" data-target="#modalBasketNew">
                <nobr><i class="fa fa-plus-square"></i> Новый заказ</nobr>
            </button>
        </div>
    </div>

    <table class="table table-sm table-responsive-sm">
        <thead>
        <tr>
            <td>Дата создания</td>
            <td>Номер</td>
            <td>Магазин</td>
            <td>Сумма</td>
            <td>Доставка</td>
            <td>Действия</td>
        </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td>{{ basket.createDate.format('Y-m-d') }}</td>
                <td><a class="dashed" href="{{ path('basket_show', {'id': basket.id} ) }}">{{ basket.idWithPrefix }}</a></td>
                <td>
                    {{ basket.shop }}
                    {% if basket.userComment %}
                        <i class="far fa-comment" data-toggle="tooltip" title="{{ basket.userComment }}"></i>
                    {% endif %}
                </td>
                <td>–</td>
                <td>–</td>
                <td class="justify-content-center d-flex">
                    {#<a class="btn btn-sm btn-narrow btn-mdb-color darken-3" href="{{ path('basket_edit', {'id': basket.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('basket/_delete_form.html.twig') }}#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Modal: modalBasketNew -->
    <div class="modal fade" id="modalBasketNew" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Новый заказ</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!--Body-->
                <div class="modal-body ui-front">{# без класса ui-front список autocomplite'a будет показан не рядом с полем поиска #}
                    {{ include('basket/_form.html.twig') }}
                </div>
                <!--Footer-->
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-sm btn-dark-green" type="submit" formnovalidate>
                        <i class="fa fa-plus-square pr-1"></i> {{ button_label|default('Сохранить') }}
                    </button>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
    <!-- Modal: modalBasketNew -->

{% endblock %}

{% block javascripts %}
    {% if modalBasketNewShow %}
        <script>
            $(() => {
                $('#modalBasketNew').modal('show');
            });
        </script>
    {% endif %}
{% endblock %}
