{% extends 'layout/base.html.twig' %}

{% block title %}Заказы{{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12 col-md-9">
            <h1 class="align-self-center">Заказы</h1>
        </div>
        <div class="col-sm-12 col-md-3 text-right">
            <a class="btn btn-block btn-dark-green" href="{{ path('basket_new') }}" style="min-width: 145px">
                <i class="fa fa-plus-square pr-1"></i> Создать
            </a>
        </div>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Active_reason</th>
                <th>Inactive_reason</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td>{{ basket.id }}</td>
                <td>{{ basket.status }}</td>
                <td>{{ basket.activeReason }}</td>
                <td>{{ basket.inactiveReason }}</td>
                <td>
                    <a href="{{ path('basket_show', {'id': basket.id}) }}">show</a>
                    <a href="{{ path('basket_edit', {'id': basket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
