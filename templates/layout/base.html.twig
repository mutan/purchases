<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <link rel="icon" href="/favicon.ico">
        <title>{% block title %}{% endblock %}</title>
        <!-- STYLES -->view
        <link rel="stylesheet" href="/css/fontawesome-all.min.css"> {# 5.7.1 #}
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/mdb.min.css">
        <link rel="stylesheet" href="/css/style.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

    <!-- Navbar -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark mdb-color darken-3">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand" href="https://mdbootstrap.com/docs/jquery/" target="_blank">
                <strong>Совместные покупки</strong>
            </a>

            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <!-- Left -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active"><a class="nav-link" href="#">Home<span class="sr-only">(current)</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/">About MDB</a></li>
                    <li class="nav-item"><a class="nav-link" href="/">Free download</a></li>
                </ul>

                <!-- Right -->
                <ul class="navbar-nav nav-flex-icons">
                    <li class="nav-item"><a href="/" class="nav-link"><i class="fab fa-facebook-f"></i></a></li>
                    <li class="nav-item">
                        <a href="/" class="nav-link"><i class="fab fa-twitter"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/" class="nav-link"><i class="fab fa-github mr-2"></i></a>
                    </li>
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown">
                                <i class="fas fa-user"></i> <span class="clearfix d-none d-sm-inline-block">{{ app.user.name }}</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">Action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_logout') }}"><i class='fa fa-sign-out-alt'></i> Выйти</a>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link border border-light rounded" href="{{ path('app_login') }}"><i class='fa fa-sign-in-alt'></i> Войти</a>
                        </li>
                    {% endif %}
                </ul>

            </div>

        </div>
    </nav>
    <!-- Navbar -->

        <main class="mt-5 pt-4">
            <!-- User switch -->
            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                <div class="alert alert-danger text-center mb-0"
                     style="border-radius: 0; font-size: 0.9rem; padding: .3rem 1.25rem;"
                >
                    You are currently switched to user <strong>{{ app.user.name }} ({{ app.user.email }})</strong>.
                    <a class="alert-link" href="{{ path('app_homepage', {'_switch_user' : '_exit'}) }}"> <i class="fas fa-sign-out-alt ml-2"></i> Exit</a>
                </div>
            {% endif %}
            <!-- /User switch -->

            <!-- Flash messages -->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
            <!-- /Flash messages -->

            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </main>

        <!-- Footer -->
        <footer class="page-footer font-small unique-color-dark">

            <div class="info-color-dark">
                <div class="container">

                    <div class="row py-3 d-flex align-items-center">

                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <h6 class="mb-0">Get connected with us on social networks!</h6>
                        </div>

                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <a id="footer-link-newsletter" href="#" class="border p-2 px-3 d-none d-md-inline-block">
                                Newsletter <i class="fas fa-envelope white-text ml-2"> </i>
                            </a>
                        </div>

                        <div class="col-md-4 text-center">
                            <a class="fb-ic">
                                <i class="fab fa-facebook-f white-text mr-4"> </i>
                            </a>
                            <a><i class="fab fa-vk white-text mr-4"></i></a>
                            <a class="tw-ic">
                                <i class="fab fa-twitter white-text mr-4"> </i>
                            </a>
                        </div>

                    </div>

                </div>
            </div>

            <!-- Footer Links -->
            <div class="container text-center text-md-left pt-4">

                <div class="row mt-3">

                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">Company name</h6>
                        <hr class="info-color-dark mb-4 mt-0 d-inline-block mx-auto">
                        <p>
                            Here you can use rows and columns here to organize your footer content.
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                        </p>
                    </div>

                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">Products</h6>
                        <hr class="info-color-dark mb-4 mt-0 d-inline-block">
                        <p><a href="#!">MDBootstrap</a></p>
                        <p><a href="#!">MDWordPress</a></p>
                        <p><a href="#!">BrandFlow</a></p>
                    </div>

                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">Useful links</h6>
                        <hr class="info-color-dark mb-4 mt-0 d-inline-block">
                        <p><a href="#!">Your Account</a></p>
                        <p><a href="#!">Become an Affiliate</a></p>
                        <p><a href="#!">Shipping Rates</a></p>
                    </div>

                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <h6 class="text-uppercase font-weight-bold">Contact</h6>
                        <hr class="info-color-dark mb-4 mt-0 d-inline-block mx-auto">
                        <p><i class="fas fa-home mr-3"></i> New York, NY 10012, US</p>
                        <p><i class="fas fa-envelope mr-3"></i> info@example.com</p>
                        <p><i class="fas fa-phone mr-3"></i> + 01 234 567 88</p>
                    </div>

                </div>

            </div>
            <!-- /Footer Links -->

            <div class="footer-copyright text-center py-3">© 2019 Copyright:
                <a href="/">promagic.ru</a>
            </div>

        </footer>
        <!-- /Footer -->

        <!-- SCRIPTS -->
        <script type="text/javascript" src="/js/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="/js/popper.min.js"></script>
        <script type="text/javascript" src="/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="/js/mdb.min.js"></script>
        <!-- Initializations -->
        <script type="text/javascript">
            // Animations initialization
            new WOW().init();
        </script>
        {% block javascripts %}{% endblock %}
    </body>

</html>