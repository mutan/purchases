<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="icon" href="{{ asset('/favicon.ico') }}">
    <title>{% block title %} – buytoyou.ru{% endblock %}</title>
    <!-- STYLES -->
    <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/fontawesome-all.min.css') }}"> {# 5.7.1 #}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/mdb.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- User switch -->
    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
        <div class="alert alert-danger alert-fixed text-center mb-0" style="border-radius: 0; font-size: 0.9rem; padding: .3rem 1.25rem;">
            You are currently switched to user <strong>{{ app.user.name }} ({{ app.user.email }})</strong>.
            <a class="alert-link" href="{{ path('app_homepage', {'_switch_user' : '_exit'}) }}"> <i class="fas fa-sign-out-alt ml-2"></i> Exit</a>
        </div>
    {% endif %}
    <!-- /User switch -->

    <!-- Navbar -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark mdb-color darken-3">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand" href="/">
                <strong><span class="d-none d-sm-inline">Совместные покупки • βeta</span><span class="d-sm-none">СП • βeta</span></strong>
            </a>

            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse ml-3" id="navbarSupportedContent">

                <!-- Left -->
                <ul class="navbar-nav mr-auto">
                    {% if is_granted('ROLE_USER') %}
                    <li class="nav-item {% if 'user_basket' in app.request.get('_route') %}active{% endif %}">
                        <a class="nav-link" href="{{ path('user_basket_index') }}">Мои заказы</a>
                    </li>
                        {% if is_granted('ROLE_MANAGER') %}
                        <li class="nav-item d-none d-sm-inline">
                            <span class="nav-link">|</span>
                        </li>
                        <li class="nav-item {% if 'manager_basket' in app.request.get('_route') %}active{% endif %}">
                            <a class="nav-link" href="{{ path('manager_basket_list') }}">Заказы участников</a>
                        </li>
                        <li class="nav-item {% if 'package' in app.request.get('_route') %}active{% endif %}">
                            <a class="nav-link" href="{{ path('package_index') }}">Посылки</a>
                        </li>
                        {% endif %}
                    {% endif %}
                </ul>

                <!-- Right -->
                <ul class="navbar-nav">
                    {#<li class="nav-item"><a href="/" class="nav-link"><i class="fab fa-vk" aria-hidden="true"></i></a></li>#}
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown">
                                <i class="fa fa-user"></i> <span class="pl-1">{{ app.user.name }}</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">Профиль</a>
                                <a class="dropdown-item" href="{{ path('user_address_index') }}">Мои адреса</a>
                                <a class="dropdown-item" href="{{ path('user_passport_index') }}">Мои паспорта</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_logout') }}"><i class='fa fa-sign-out-alt'></i> Выйти</a>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link border border-light" href="{{ path('app_login') }}"><i class='fa fa-sign-in-alt'></i> Войти</a>
                        </li>
                    {% endif %}
                </ul>

            </div>

        </div>
    </nav>
    <!-- Navbar -->

    <main style="padding-top: {%- if is_granted('ROLE_PREVIOUS_ADMIN') -%}78px{%- else -%}57px{%- endif -%}">
        <div class="container mt-4 mb-4">
            <!-- Flash messages -->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
            <!-- /Flash messages -->

            {% block body %}{% endblock %}
        </div>
    </main>

    <!-- Modal: modalMain -->
    <div class="modal fade" id="modalMain" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div>
        </div>
    </div>
    <!-- Modal: modalMain -->

    <!-- Footer -->
    <footer class="page-footer font-small unique-color-dark">

        {#<div class="info-color-dark">
            <div class="container">

                <div class="row py-3 d-flex align-items-center">

                    <div class="col-md-4 text-center mb-4 mb-md-0">
                        <h6 class="mb-0">Get connected with us on social networks!</h6>
                    </div>

                    <div class="col-md-4 text-center mb-4 mb-md-0">
                        <a id="footer-link-newsletter" href="#" class="border p-2 px-3 d-none d-md-inline-block">
                            Newsletter <i class="fas fa-envelope white-text ml-2"> </i>
                        </a>
                    </div>

                    <div class="col-md-4 text-center">
                        <a class="fb-ic">
                            <i class="fab fa-facebook-f white-text mr-4"> </i>
                        </a>
                        <a><i class="fab fa-vk white-text mr-4"></i></a>
                        <a class="tw-ic">
                            <i class="fab fa-twitter white-text mr-4"> </i>
                        </a>
                    </div>

                </div>

            </div>
        </div>#}

        <!-- Footer Links -->
        <div class="container text-center text-md-left pt-4">

            <div class="row mt-3">

                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                    <h6 class="text-uppercase font-weight-bold">О сервисе</h6>
                    <hr class="info-color-dark mb-4 mt-0 d-inline-block mx-auto">
                    <p>
                        Собираем совместные заказы из интернет-магазинов США. Экономим на доставке.
                    </p>
                </div>

                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                    <h6 class="text-uppercase font-weight-bold">Информация</h6>
                    <hr class="info-color-dark mb-4 mt-0 d-inline-block">
                    <p><a href="{{ path('info_profit') }}">В чем выгода?</a></p>
                    <p><a href="{{ path('info_delivery') }}">Доставка</a></p>
                    <p><a href="{{ path('info_what_and_where') }}">Что и где можно купить</a></p>
                    <p><a href="{{ path('info_privacy_policy') }}">Политика обработки персональных данных</a></p>
                </div>

                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                    <h6 class="text-uppercase font-weight-bold">Контакты</h6>
                    <hr class="info-color-dark mb-4 mt-0 d-inline-block mx-auto">
                    <p><i class="fab fa-telegram mr-3"></i><a href="https://t.me/akim_now" target="_blank">Telegram</a></p>
                    <p><i class="fas fa-envelope mr-3"></i><a href="mailto:akim_now@mail.ru" target="_blank">akim_now@mail.ru</a></p>
                </div>

            </div>

        </div>
        <!-- /Footer Links -->

        <div class="footer-copyright text-center py-3">© 2019 Copyright:
            <a href="/">buytoyou.ru</a>
        </div>

    </footer>
    <!-- /Footer -->

    <!-- SCRIPTS -->
    <script type="text/javascript" src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/popper.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/mdb.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/scripts.js') }}"></script>
    <!-- Initializations -->
    <script type="text/javascript">
        // Animations initialization
        new WOW().init();
    </script>
    {% block javascripts %}{% endblock %}
</body>

</html>