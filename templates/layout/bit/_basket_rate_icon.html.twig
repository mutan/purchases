{% if basket.rate %}
    {% if badge|default(false) %}<span class="badge badge-secondary mr-1">{{ basket.rate }}</span>рублей{% endif %}
    {% if not basket.isRateFinal %}
        <i class="fa fa-exclamation-circle pointer text-warning" data-toggle="tooltip" title="Курс $ – предварительный. Окончательный будет проставлен после того, как платеж магазину будет подтвержден банком."></i>
    {%- endif -%}
{% else %}
    <i class="fa fa-exclamation-circle pointer text-danger" data-toggle="tooltip" title="Заказу еще не проставлен курс $"></i>
{%- endif -%}