{% form_theme form 'layout/form/_errors.html.twig' %}

<div class="modal-header">
    <h4 class="modal-title">{{ title }}</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
</div>

{{ form_start(form) }}
    {{ form_widget(form._token) }}
    {{ form_errors(form) }}

<div class="modal-body">
    <div class="form-row">
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.lastName, 'Фамилия') }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.firstName, 'Имя') }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.middleName, 'Отчество') }}
            {{ form_widget(form.middleName, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.postCode, 'Индекс') }}
            {{ form_widget(form.postCode, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.country, 'Страна') }}
            {{ form_widget(form.country, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.region, 'Регион') }}
            {{ form_widget(form.region, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.city, 'Город') }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.street, 'Улица') }}
            {{ form_widget(form.street, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-sm-12 col-md-4 col-lg-2">
            {{ form_label(form.house, 'Дом') }}
            {{ form_widget(form.house, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-4 col-lg-2">
            {{ form_label(form.building, 'Корп./стр.') }}
            {{ form_widget(form.building, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-4 col-lg-2">
            {{ form_label(form.flat, 'Квартира') }}
            {{ form_widget(form.flat, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.phone, 'Телефон') }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.email, 'Емейл') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control-sm', 'value': form.vars.value.email ?: app.user.email }}) }}
        </div>
    </div>
</div>

<div class="modal-footer">
    {{ include('layout/_save_button.html.twig') }}
</div>
{{ form_widget(form) }}
{{ form_end(form, {'render_rest': false}) }}