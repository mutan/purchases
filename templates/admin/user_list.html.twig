{% extends 'layout/base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-12">

        <table class="table table-sm table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">...</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>
</div>

{% endblock %}
