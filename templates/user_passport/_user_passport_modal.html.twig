{% form_theme form 'layout/form/_errors.html.twig' %}

<div class="modal-header">
    <h4 class="modal-title">{{ title }}</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
</div>

{{ form_start(form) }}
    {{ form_widget(form._token) }}
    {{ form_errors(form) }}

<div class="modal-body">
    <div class="form-row">
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.series, 'Серия') }}
            {{ form_widget(form.series, {'attr': {'class': 'form-control-sm'}}) }}
            {{ form_help(form.series) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.number, 'Номер') }}
            {{ form_widget(form.number, {'attr': {'class': 'form-control-sm'}}) }}
            {{ form_help(form.number) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.inn, 'ИНН') }}
            {{ form_widget(form.inn, {'attr': {'class': 'form-control-sm'}}) }}
            {{ form_help(form.inn) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.birthDate, 'Дата рождения') }}
            {{ form_widget(form.birthDate, {'attr': {'class': 'form-control-sm js-datepicker'}}) }}
            {{ form_help(form.birthDate) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-sm-12 col-md-6 col-lg-9">
            {{ form_label(form.giveBy, 'Кем выдан') }}
            {{ form_widget(form.giveBy, {'attr': {'class': 'form-control-sm'}}) }}
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            {{ form_label(form.giveDate, 'Дата выдачи') }}
            {{ form_widget(form.giveDate, {'attr': {'class': 'form-control-sm js-datepicker'}}) }}
            {{ form_help(form.giveDate) }}
        </div>
    </div>
</div>

<div class="modal-footer">
    {{ include('layout/_save_button.html.twig') }}
</div>
{{ form_widget(form) }}
{{ form_end(form, {'render_rest': false}) }}