<form method="post" action="{{ path('user_passport_delete', {'id': user_passport.id}) }}" onsubmit="return confirm('Действительно удалить?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_passport.id) }}">
    <button class="btn btn-sm btn-narrow btn-danger ml-1" title="Удалить"><i class="fas fa-trash"></i></button>
</form>