{% form_theme form 'layout/form/_errors.html.twig' %}

<div class="modal-header">
    <h4 class="modal-title">{{ title }}</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
</div>

{{ form_start(form) }}
    {{ form_widget(form._token) }}
    {{ form_errors(form) }}

<div class="modal-body">
    <div class="form-row">
        <div class="form-group col-sm-12">
            {{ form_label(form.vk, 'Ссылка на вас во Вконтакте') }}
            {{ form_widget(form.vk, {'attr': {'class': 'form-control-sm'}}) }}
            {{ form_help(form.vk) }}
        </div>
        <div class="form-group col-sm-12">
            {{ form_label(form.telegram, 'Ссылка на вас в Telegram') }}
            {{ form_widget(form.telegram, {'attr': {'class': 'form-control-sm'}}) }}
            {{ form_help(form.telegram) }}
        </div>
    </div>
</div>

<div class="modal-footer">
    {{ include('layout/_save_button.html.twig') }}
</div>
{{ form_widget(form) }}
{{ form_end(form, {'render_rest': false}) }}